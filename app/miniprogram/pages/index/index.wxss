/* 引入主题配置 */
@import "../../styles/theme.wxss";

.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
  padding: 20rpx;
}

/* 分类栏样式 */
.category-bar {
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.categories {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  white-space: nowrap;
  z-index: 1;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: flex;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.category-item.active {
  background: #FF6B6B;
  color: white;
}

/* 笑话卡片样式 */
.jokes-list {
  margin-top: 100rpx;  /* 为固定定位的分类腾出空间 */
}

.joke-item {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.joke-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

/* 为不同分类设置不同颜色 */
.joke-category {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.joke-category.cold {
  background: var(--category-cold);
  color: #fff;
}

.joke-category.hot {
  background: var(--category-hot);
  color: #fff;
}

.joke-category.love {
  background: var(--category-love);
  color: #fff;
}

.joke-category.funny {
  background: var(--category-funny);
  color: #333;
}

.joke-category.life {
  background: var(--category-life);
  color: #fff;
}

.joke-category.work {
  background: var(--category-work);
  color: #fff;
}

.joke-time {
  font-size: 24rpx;
  color: #999;
}

.joke-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20rpx;
}

.joke-actions {
  display: flex;
  justify-content: flex-end;
  color: #999;
  font-size: 24rpx;
}

.action {
  margin-left: 30rpx;
}

.joke-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-group {
  display: flex;
  justify-content: flex-start;
  gap: 40rpx;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 0;
}

.action-icon {
  font-size: 36rpx;
}

.action-count {
  font-size: 26rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 添加加载动画 */
.loading-container {
  text-align: center;
  padding: 30rpx;
}

.loading-dots {
  display: inline-flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--primary-color);
  animation: bounce 0.5s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
  background: var(--secondary-color);
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
  background: var(--accent-color);
}

@keyframes bounce {
  to {
    transform: translateY(-10rpx);
  }
}

.loading, .no-more {
  text-align: center;
  color: #999;
  padding: 20rpx;
  font-size: 24rpx;
} 